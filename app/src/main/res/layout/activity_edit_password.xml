<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgroundblur"
    android:gravity="center"
    tools:context=".EditPassword">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_30sdp"
        app:cardCornerRadius="@dimen/_30sdp"
        app:cardElevation="@dimen/_20sdp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@color/white"
            android:orientation="vertical"
            android:padding="@dimen/_20sdp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/gelasiobold"
                android:text="@string/edit_password"
                android:textAlignment="center"
                android:textColor="#0091EA"
                android:textSize="@dimen/_26ssp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/edit_userName"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_50sdp"
                android:layout_marginTop="@dimen/_35sdp"
                android:background="@drawable/border"
                android:drawableStart="@drawable/baseline_account_circle_24"
                android:drawablePadding="@dimen/_8sdp"
                android:hint="@string/userName"
                android:importantForAutofill="no"
                android:inputType="text"
                android:padding="@dimen/_8sdp"
                android:textColor="@color/black"
                android:textColorHint="#808080"
                tools:ignore="TextFields,VisualLintTextFieldSize,TextContrastCheck,DuplicateSpeakableTextCheck" />

            <EditText
                android:id="@+id/edit_pass"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_50sdp"
                android:layout_marginTop="@dimen/_18sdp"
                android:background="@drawable/border"
                android:drawableStart="@drawable/baseline_lock_24"
                android:drawablePadding="@dimen/_8sdp"
                android:hint="@string/new_password"
                android:importantForAutofill="no"
                android:inputType="text"
                android:padding="@dimen/_8sdp"
                android:textColor="@color/black"
                android:textColorHint="#808080"
                tools:ignore="TextFields,VisualLintTextFieldSize,TextContrastCheck" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_22sdp"
                android:gravity="center"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/back_to_login_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginEnd="@dimen/_5sdp"
                    android:backgroundTint="#0091EA"
                    android:text="@string/back"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_15ssp"
                    android:textStyle="bold"
                    tools:ignore="DuplicateSpeakableTextCheck,VisualLintBounds" />

                <Button
                    android:id="@+id/save_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:backgroundTint="#0091EA"
                    android:text="@string/save"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_15ssp"
                    android:textStyle="bold"
                    tools:ignore="DuplicateSpeakableTextCheck,VisualLintBounds" />

            </LinearLayout>


        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>