<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgroundblur"
    android:gravity="center"
    tools:context=".appLogin">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_30sdp"
        app:cardCornerRadius="@dimen/_30sdp"
        app:cardElevation="@dimen/_20sdp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_horizontal"
            android:padding="@dimen/_18sdp"
            android:background="@color/white">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/gelasiobold"
                android:text="@string/login"
                android:textAlignment="center"
                android:textColor="#0091EA"
                android:textSize="@dimen/_30ssp"
                android:textStyle="bold" />
            <EditText
                android:id="@+id/login_username"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_50sdp"
                android:layout_marginTop="@dimen/_35sdp"
                android:background="@drawable/border"
                android:drawableStart="@drawable/baseline_account_circle_24"
                android:drawablePadding="@dimen/_8sdp"
                android:hint="@string/userName"
                android:importantForAutofill="no"
                android:inputType="text"
                android:padding="@dimen/_8sdp"
                android:textColor="@color/black"
                android:textColorHint="#808080"
                tools:ignore="TextFields,VisualLintTextFieldSize,TextContrastCheck" />
            <EditText
                android:id="@+id/login_password"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_50sdp"
                android:layout_marginTop="@dimen/_18sdp"
                android:background="@drawable/border"
                android:drawableStart="@drawable/baseline_lock_24"
                android:drawablePadding="@dimen/_8sdp"
                android:hint="@string/password"
                android:importantForAutofill="no"
                android:inputType="text"
                android:padding="@dimen/_8sdp"
                android:textColor="@color/black"
                android:textColorHint="#808080"
                tools:ignore="TextFields,VisualLintTextFieldSize,TextContrastCheck" />
            <TextView
                android:id="@+id/forget_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:paddingEnd="@dimen/_8sdp"
                android:text="@string/forget_password"
                android:textColor="@color/black"
                android:textSize="@dimen/_13ssp"
                android:textAlignment="viewEnd"
                tools:ignore="RtlSymmetry,VisualLintBounds" />
            <Button
                android:id="@+id/login_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/_25sdp"
                android:backgroundTint="#0091EA"
                android:text="@string/login"
                android:textColor="@color/white"
                android:textSize="@dimen/_15ssp"
                android:textStyle="bold"
                tools:ignore="DuplicateSpeakableTextCheck,VisualLintBounds" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_25sdp"
                android:orientation="horizontal"
                tools:ignore="VisualLintBounds">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/new_account"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_13ssp"
                    android:textStyle="normal"
                    tools:ignore="VisualLintBounds" />
                <TextView
                    android:id="@+id/signUpMessageId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="registerPage"
                    android:text="@string/register"
                    android:textColor="#1565C0"
                    android:textSize="@dimen/_14ssp"
                    android:textStyle="bold"
                    tools:ignore="TouchTargetSizeCheck" />
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>