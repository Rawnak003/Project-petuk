<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UploadActivity"
    android:background="#E0F6FF"
    android:padding="@dimen/_18sdp"
    android:orientation="vertical">

    <include layout="@layout/activity_toolbar2"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/upload"
            android:textColor="#0091EA"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textSize="@dimen/_26ssp"
            android:backgroundTint="#E0F6FF"
            tools:ignore="VisualLintBounds" />
        <EditText
            android:id="@+id/upload_username"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:background="@drawable/border"
            android:drawableStart="@drawable/baseline_account_circle_24"
            android:drawablePadding="@dimen/_8sdp"
            android:hint="@string/userName"
            android:importantForAutofill="no"
            android:inputType="text"
            android:padding="@dimen/_8sdp"
            android:textColor="@color/black"
            android:textColorHint="#808080"
            tools:ignore="TextFields,VisualLintTextFieldSize,TextContrastCheck,VisualLintBounds" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2">
            <EditText
                android:id="@+id/upload_recipe_name"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="@drawable/border"
                android:drawableStart="@drawable/baseline_restaurant_24"
                android:drawablePadding="@dimen/_8sdp"
                android:hint="@string/recipe_name"
                android:importantForAutofill="no"
                android:inputType="text"
                android:padding="@dimen/_8sdp"
                android:textColor="@color/black"
                android:textColorHint="#808080"
                tools:ignore="TextFields,VisualLintTextFieldSize,TextContrastCheck,VisualLintBounds" />

            <EditText
                android:id="@+id/upload_category_name"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="@drawable/border"
                android:drawableStart="@drawable/baseline_restaurant_24"
                android:drawablePadding="@dimen/_8sdp"
                android:hint="@string/category_name"
                android:importantForAutofill="no"
                android:inputType="text"
                android:padding="@dimen/_8sdp"
                android:textColor="@color/black"
                android:textColorHint="#808080"
                tools:ignore="TextFields,VisualLintTextFieldSize,TextContrastCheck,VisualLintBounds" />


        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/upload_an_image_first"
            android:textSize="@dimen/_15ssp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textAlignment="viewStart"
            android:layout_marginTop="@dimen/_8sdp"
            android:backgroundTint="#E0F6FF"/>
        <ImageView
            android:layout_width="@dimen/_70sdp"
            android:layout_height="@dimen/_70sdp"
            android:src="@drawable/upload_image_icon"
            android:layout_marginTop="@dimen/_5sdp"
            android:background="@color/white"
            android:scaleType="fitXY"
            tools:ignore="ContentDescription" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/upload_ingredient_list"
            android:textSize="@dimen/_15ssp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textAlignment="viewStart"
            android:layout_marginTop="@dimen/_8sdp"
            android:backgroundTint="#E0F6FF"/>

        <Button
            android:id="@+id/upload_ingredient_button"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/_5sdp"
            android:backgroundTint="#0091EA"
            android:drawableEnd="@drawable/baseline_add_24"
            android:text="@string/add"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="@dimen/_14ssp"
            android:textStyle="bold"
            tools:ignore="DuplicateSpeakableTextCheck" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/upload_procedure"
            android:textSize="@dimen/_15ssp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textAlignment="viewStart"
            android:layout_marginTop="@dimen/_8sdp"
            android:backgroundTint="#E0F6FF"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/upload_procedure_button"
            android:backgroundTint="#0091EA"
            android:text="@string/add"
            android:textColor="@color/white"
            android:layout_marginTop="@dimen/_5sdp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:drawableEnd="@drawable/baseline_add_24"
            android:textSize="@dimen/_14ssp"/>

        <Button
            android:id="@+id/uploadButton"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_50sdp"
            android:layout_marginTop="@dimen/_25sdp"
            android:backgroundTint="#0091EA"
            android:text="@string/upload"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="@dimen/_17ssp"
            android:textStyle="bold"
            tools:ignore="DuplicateSpeakableTextCheck,VisualLintButtonSize,VisualLintBounds" />

    </LinearLayout>

</LinearLayout>